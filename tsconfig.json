{
  "compilerOptions": {
    "noImplicitAny": true,
    "strict": false,
    "checkJs": false,
    "sourceMap": false,
    "allowJs": true,
    "isolatedModules": true,
    "target": "es6",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "tsconfig.json"
  ],
  "exclude": [
    "node_modules",
    ".eslintrc.js"
  ]
}